{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": [
        "src",
        "../utils/src/helper.d.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "noImplicitAny": true,
    "compilerOptions": {
        "jsx": "preserve",
        "jsxImportSource": "vue",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "useDefineForClassFields": true,
        "types": [
            "vite/client"
        ],
        "declaration": false
    }
}
